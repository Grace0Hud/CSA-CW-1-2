public class tempConverter
{
    //computes the Fahrenheit equivelent of a specific Celcius
    //value using the formula F=(9/5)C + 32
    public static void main(String args [])
    {
        final int BASE = 32;
        final double CONVERSION_FACTOR = 9.0/5.0;
        
        int celciusTemp = 24; // value to covert
        double fahrenheitTemp;
        
        fahrenheitTemp = celciusTemp * CONVERSION_FACTOR + BASE;
        
        System.out.println("Celcius Tempuratire: "+ celciusTemp);
        System.out.println("Fahrenheit Equivilent: " + fahrenheitTemp);
    }
}//end of tempConverter
